@page "/not-found"
@model NotFoundModel

@{
    ViewData["Title"] = "Page not found";
}

<div class="py-4 text-center">
    <div class="display-1 fw-bold text-danger">
        <i class="fa fa-exclamation-triangle opacity-50 me-1"></i> 404
    </div>
    <h1 class="fw-bold mt-5 mb-2">Oops..</h1>
    <h2 class="fs-4 fw-medium text-muted mb-5">We are sorry but the page you are looking for was not found.</h2>
</div>